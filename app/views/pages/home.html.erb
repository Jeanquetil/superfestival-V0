<div class="banner full-vh">
  <div class="banner-content">
    <h1>SUPER FESTIVAL</h1>
    <br>
    <p>manage your own festival's timetable</p>
    <div id="scrolldown">
      <%= image_tag "wave.png" %>
      <a href="#" id="scroll"><i class="fa fa-caret-down fa-5x" aria-hidden="true"></i></a>
    </div>
  </div>
</div>
<div class="navbar-height" id="festivals"></div>
<div class="wrapper">
  <div class="container">
    <div class="row">
      <h1 class="text-center">festivals</h1>
      <% @festivals.each do |r| %>
      <%= render "festival", festival: r %>
      <% end %>
    </div>
  </div>
</div>

<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).ready(function() {
      $('.tohide').hide();
      $(window).scroll(function() {
          var scroll = $(window).scrollTop();

          if (scroll >= $(window).height()) {
              $(".navbar-wagon").addClass("lighter-background");
              $(".navbar-wagon").addClass("box-shadow");
              $('.tohide').show();
          } else {
              $(".navbar-wagon").removeClass("lighter-background");
              $(".navbar-wagon").removeClass("box-shadow");
              $('.tohide').hide();
          }
      });
      $('#scroll').click(function() {
        $('html, body').animate({
          scrollTop: $("#festivals").offset().top
        }, 1500);
      });
    });
  <% end %>
<% end %>
